<?xml version="1.0" encoding="UTF-8"?>

<!-- the default configuration for the reactive exercise -->
<configuration name="ex1" mode="reactive">

	<!-- load settings -->
	<settings import="config/settings_default.xml" />	
	
	<!-- load the topology-->
	<topology import="config/topology/france.xml" />
	
	<!-- load agents -->
	<agents import="config/agents.xml" />
	
	<!-- define task distribution -->
	<tasks number="10" rngSeed="3590420242192152424">
		<!--
			the probabilities, rewards and weight of tasks
		-->
		<probability distribution="uniform" min="0.0" max="1.0" />
		<reward distribution="constant" policy="short-distances" min="1000" max="99999" />
		<weight distribution="constant" value="3" />
		
		<!--
			the probability that there is no task in a city
		-->
		<no-task distribution="uniform" min="0.2" max="0.4" />
	</tasks>
	
	<!-- the companies and vehicles in the simulation -->
	<companies>
		<company name="Company A">
			<!-- the first vehicle (blue) -->
			<vehicle name="RLA - 0.95">
				<set color="#0000ff" />
				<set home="Paris" />
				<set speed="220" />
				<set capacity="30" />
				<set cost-per-km="5" />
			</vehicle>
		</company>

		<company name="Company C">
			<!-- the third vehicle (green) -->
			<vehicle name="RLA - 0.8">
				<set color="#00ff00" />
				<set home="Brest" />
				<set speed="220" />
				<set capacity="30" />
				<set cost-per-km="5" />
			</vehicle>
		</company>

		<company name="Company D">
			<!-- the fourth vehicle (yellow) -->
			<vehicle name="RLA - 0.5">
				<set color="#ffff00" />
				<set home="Monaco" />
				<set speed="220" />
				<set capacity="30" />
				<set cost-per-km="5" />
			</vehicle>
		</company>
		
		<company name="Company E">
			<!-- the fifth vehicle (magenta) -->
			<vehicle name="RLA - 0.0">
				<set color="#ff00ff" />
				<set home="Strasbourg" />
				<set speed="220" />
				<set capacity="80" />
				<set cost-per-km="5" />
			</vehicle>
		</company>
		
		<company name="Company F">
			<!-- the sixth vehicle (cyan) -->
			<vehicle name="RLA8">
				<set color="#00ffff" />
				<set home="Bordeaux" />
				<set speed="220" />
				<set capacity="80" />
				<set cost-per-km="5" />
			</vehicle>
		</company>
        
        <company name="Company B">
            <!-- the second vehicle (red) -->
            <vehicle name="Random">
                <set color="#ff0000" />
                <set home="Lyon" />
                <set speed="220" />
                <set capacity="30" />
                <set cost-per-km="5" />
            </vehicle>
        </company>
		
	</companies>
	
</configuration>
